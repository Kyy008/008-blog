---
import { Icon } from "astro-icon/components";
import { profileConfig, umamiConfig, siteConfig } from "../../config";
import { url } from "../../utils/url-utils";
import { getSortedPosts } from "../../utils/content-utils";
import ImageWrapper from "../misc/ImageWrapper.astro";
import TypewriterText from "../TypewriterText.astro";
import I18nKey from "../../i18n/i18nKey";
import { i18n } from "../../i18n/translation";

// 解析 umami
const umamiEnabled = umamiConfig.enabled || false;
const umamiWebsiteId = umamiConfig.scripts.match(/data-website-id="([^"]+)"/)?.[1] || "";
const umamiApiKey = umamiConfig.apiKey || "";
const umamiBaseUrl = umamiConfig.baseUrl || "";

const posts = await getSortedPosts();
const siteStartDate = siteConfig.siteStartDate || "2025-01-01";
---

<div class="card-base p-3">
    <a aria-label="Go to About Page" href={url('/about/')}
       class="group block relative mx-auto mt-1 lg:mx-0 lg:mt-0 mb-3
       max-w-[12rem] lg:max-w-none overflow-hidden rounded-xl active:scale-95">
        <div class="absolute transition pointer-events-none group-hover:bg-black/30 group-active:bg-black/50
        w-full h-full z-50 flex items-center justify-center">
            <Icon name="fa6-regular:address-card"
                  class="transition opacity-0 scale-90 group-hover:scale-100 group-hover:opacity-100 text-white text-5xl">
            </Icon>
        </div>
        <ImageWrapper src={profileConfig.avatar || ""} alt="Profile Image of the Author" class="mx-auto lg:w-full h-full lg:mt-0 "></ImageWrapper>
    </a>
    <div class="px-2">
        <div class="font-bold text-xl text-center mb-1 dark:text-neutral-50 transition">{profileConfig.name}</div>
        <div class="h-1 w-5 bg-[var(--primary)] mx-auto rounded-full mb-2 transition"></div>
        
        <div class="text-center text-neutral-400 mb-2.5 transition">
            {profileConfig.typewriter?.enable ? (
                <TypewriterText 
                    text={profileConfig.bio || ""}
                    speed={profileConfig.typewriter.speed}
                    class="inline-block"
                />
            ) : (
                profileConfig.bio
            )}
        </div>
        
        <div class="flex flex-wrap gap-2 justify-center mb-1">
            {profileConfig.links.length > 1 && profileConfig.links.map(item =>
                <a rel="me" aria-label={item.name} href={item.url} target="_blank" 
                   class="btn-regular rounded-lg h-10 w-10 active:scale-90">
                    <Icon name={item.icon} class="text-[1.5rem]"></Icon>
                </a>
            )}
            {profileConfig.links.length == 1 && 
                <a rel="me" aria-label={profileConfig.links[0].name} href={profileConfig.links[0].url} target="_blank"
                   class="btn-regular rounded-lg h-10 gap-2 px-3 font-bold active:scale-95">
                    <Icon name={profileConfig.links[0].icon} class="text-[1.5rem]"></Icon>
                    {profileConfig.links[0].name}
                </a>
            }
        </div>
        
        <hr class="w-full border-t border-neutral-200 dark:border-neutral-700 my-4" />

        <div class="grid grid-cols-2">
            <!-- 文章数 -->
            <div class="flex flex-col items-center justify-center border-r border-neutral-200 dark:border-neutral-700">
                <div class="flex items-center gap-1.5 text-neutral-500 dark:text-neutral-400 mb-1">
                    <Icon name="material-symbols:article-outline" class="text-sm" />
                    <span class="text-xs font-medium">{i18n(I18nKey.siteStatsPostCount)}</span>
                </div>
                <span class="text-xl font-bold text-neutral-900 dark:text-neutral-100 leading-none">{posts.length}</span>
            </div>

            <!-- 运行天数 -->
            <div class="flex flex-col items-center justify-center">
                <div class="flex items-center gap-1.5 text-neutral-500 dark:text-neutral-400 mb-1">
                    <Icon name="material-symbols:calendar-clock-outline" class="text-sm" />
                    <span class="text-xs font-medium">{i18n(I18nKey.siteStatsRunningDays)}</span>
                </div>
                <span class="text-xl font-bold text-neutral-900 dark:text-neutral-100 leading-none profile-running-days">0</span>
            </div>
        </div>
        
        {umamiEnabled && (
            <hr class="my-2 border-t border-dashed border-gray-300 dark:border-gray-700" />
            <div class="text-sm text-gray-500 mt-2 text-center">
                <Icon name="fa6-solid:eye" class="inline-block mr-1 text-gray-400 text-sm align-middle" />
                <span class="site-stats-display">{i18n(I18nKey.profileStatsLoading)}</span>
            </div>
        )}
    </div>
</div>

{umamiEnabled && (
    <script is:inline type="module" define:vars={{ 
        umamiBaseUrl, 
        umamiApiKey, 
        umamiWebsiteId, 
        umamiConfig,
        profileStatsPageViews: i18n(I18nKey.profileStatsPageViews),
        profileStatsVisits: i18n(I18nKey.profileStatsVisits),
        profileStatsUnavailable: i18n(I18nKey.profileStatsUnavailable)
    }}>
        // 客户端统计文案生成函数
        function generateStatsText(pageViews, visits) {
            return `${profileStatsPageViews} ${pageViews} · ${profileStatsVisits} ${visits}`;
        }
        
        // 获取访问量统计
        async function fetchSiteStats() {
            if (!umamiConfig.enabled) {
                return;
            }
            
            try {
                // 调用全局工具获取 Umami 统计数据
                const stats = await getUmamiWebsiteStats(umamiBaseUrl, umamiApiKey, umamiWebsiteId);
                
                // 从返回的数据中提取页面浏览量和访客数
                const pageViews = stats.pageviews || 0;
                const visits = stats.visits || 0;
                
                const displayElements = document.querySelectorAll('.site-stats-display');
                displayElements.forEach(element => {
                    element.textContent = generateStatsText(pageViews, visits);
                });
            } catch (error) {
                console.error('Error fetching site stats:', error);
                const displayElements = document.querySelectorAll('.site-stats-display');
                displayElements.forEach(element => {
                    element.textContent = profileStatsUnavailable;
                });
            }
        }

        if (document.readyState === 'loading') {
            // 页面加载完成后获取统计数据
            document.addEventListener('DOMContentLoaded', () => fetchSiteStats());
        } else {
            fetchSiteStats();
        }
    </script>
)}

<script is:inline define:vars={{ siteStartDate }}>
    function updateProfileRunningDays() {
        const startDate = new Date(siteStartDate);
        const now = new Date();
        const diffTime = Math.abs(now - startDate);
        const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
        
        const els = document.querySelectorAll('.profile-running-days');
        els.forEach(el => {
            el.innerText = diffDays;
        });
    }
    
    // 支持 Astro View Transitions
    document.addEventListener('astro:page-load', updateProfileRunningDays);
    // 同时也支持普通的 DOMContentLoaded
    document.addEventListener('DOMContentLoaded', updateProfileRunningDays);
    // 立即执行一次
    updateProfileRunningDays();
</script>